.header-inner {
  clearfix();

  +mobile() {
    width: autodarkgreen
    margin-bottom: 50px;
    padding: 10px;
  }
}

ul.search-result-list {
  padding-left: 0px;
  margin: 0px 5px 0px 8px;
}
p.search-result {
  border-bottom: 1px dashed #ccc;
  padding: 5px 0;
}
a.search-result-title {
  font-weight: bold;
  color: darkgreen;
}
a.search-result {
  border-bottom: transparent;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.search-keyword {
  border-bottom: 1px dashed #4088b8;
  font-weight: bold;
  color: darkcyan;
}
#local-search-result {
  height: 90%;
  overflow: auto;
}
.popup {
  display: none;
  position: fixed;
  top: 15%;
  left: 50%;
  width: 700px;
  height: 60%;
  margin-left: -350px;
  padding: 20px 8px 8px 20px;
  background: #fff;
  color: #333;
  z-index: 9999;
  border-radius: 5px;
}
@media (max-width: 767px) {
  .popup {
    padding: 10px 3px 3px 5px;
    top: 0;
    left: 0;
    margin: 0;
    width: 100%;
    height: 100%;
    border-radius: 0px;
  }
}
.popoverlay {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;
  z-index: 2080;
  background-color: rgba(66, 57, 57, 0.52);
}
#local-search-input {
  padding: 3px;
  border: none;
  text-indent: 14px;
  border-radius: 0;
  width: 140px;
  outline: none;
  border-bottom: 1px solid #999;
  background: inherit;
  opacity: 0.5;
}
#local-search-input:focus {
  opacity: 1;
}
#local-search-input {
  margin-bottom: 10px;
  width: 50%;
}
.popup-btn-close {
  position: absolute;
  padding: 10px;
  top: 6px;
  right: 14px;
  color: #4ebd79;
  font-size: 14px;
  font-weight: bold;
  text-transform: uppercase;
  cursor: pointer;
}
#no-result {
  position: absolute;
  left: 44%;
  top: 42%;
  color: #ccc;
}
